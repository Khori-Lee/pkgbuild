# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=plymouththeme-cat-git
_pkgname=plymouththeme-cat
pkgver=22.07
pkgrel=01
_destname1="/usr/share/plymouth/themes/"
_destname2="/etc/plymouth/"
pkgdesc="Personal package for installing plymouththeme-cat theme"
arch=('any')
url="https://github.com/Khori-Lee/${_pkgname}.git"
license=('GPL3')
makedepends=('git')
provides=("${pkgname}")
conflicts=()
options=(!strip !emptydirs)
source=(${_pkgname}::"git+${url}")
sha256sums=('SKIP')
package() {
	install -dm 755 ${pkgdir}${_destname1}
	install -dm 755 ${pkgdir}${_destname2}
	rm ${srcdir}/${_pkgname}/git*
	rm ${srcdir}/${_pkgname}/setup*
    cp -r ${srcdir}/${_pkgname}/${_destname1}/* ${pkgdir}${_destname1}
    cp -r ${srcdir}/${_pkgname}/${_destname2}/* ${pkgdir}${_destname2}
}
